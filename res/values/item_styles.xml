
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
   
	
	<style name="item_name" parent="fw">
	    <item name="android:textColor">@color/black</item>
		<item name="android:textSize">18dip</item>
		<item name="android:padding">4dip</item>
	</style>
	
	<style name="item_small_info" parent="ww">
	    <item name="android:textColor">@color/gray_deep</item>
		<item name="android:textSize">16dip</item>
		<item name="android:padding">4dip</item>
	</style>
	
	<style name="item_nav_btn">
	    <item name="android:layout_width">wrap_content</item>
    	<item name="android:layout_height">wrap_content</item>
    	<item name="android:gravity">center_horizontal</item>
    	<item name="android:layout_weight">1</item>
    	<item name="android:textSize">14dip</item>
    	<item name="android:textColor">@color/white</item>
    	<item name="android:background">@null</item>
	</style>
	
	
	<style name="item_category_linearlayout" parent="fw">
	    <item name="android:layout_marginLeft">2dip</item>
    	<item name="android:layout_marginRight">2dip</item>
    	<item name="android:layout_weight">1</item>
    	<item name="android:orientation">vertical</item>
	</style>
	
	
	<style name="item_category_image">
	    <item name="android:layout_width">wrap_content</item>
    	<item name="android:layout_height">wrap_content</item>
    	<item name="android:layout_gravity">center_horizontal|bottom</item>
	</style>
	
	<style name="item_category_tv">
	    <item name="android:layout_width">fill_parent</item>
    	<item name="android:layout_height">0dip</item>
    	<item name="android:gravity">center_horizontal</item>
    	<item name="android:layout_weight">1</item>
    	<item name="android:textSize">12dip</item>
    	<item name="android:textColor">@color/black</item>
	</style>
	
	<style name="item_list_item_liang" parent="ww">
	    <item name="android:textColor">@color/main_liang</item>
	    <item name="android:textSize">14dip</item>
	</style>
	
	<style name="item_detail_icon_style" parent="ww">
	    <item name="android:paddingTop">8dip</item>
	    <item name="android:layout_marginLeft">5dip</item>
	    <item name="android:layout_marginRight">5dip</item>
	</style>
	
</resources>
	