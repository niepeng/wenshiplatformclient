
<resources>
    
    <style name="ff">
	    <item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">fill_parent</item>
	</style>
	
    <style name="fw">
	    <item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
	</style>
	
    <style name="ww">
	    <item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
	</style>
	
	<style name="app_main" parent="ff">
		<item name="android:background">@color/app_main</item>
	</style>
	
	<style name="app_title_main">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">46dip</item>
		<item name="android:orientation">horizontal</item>
		<item name="android:background">@color/yun_title</item>
	</style>
	
	<style name="app_title_left">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:background">@drawable/btn_bacgroud</item>
		<item name="android:textSize">16dip</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:layout_alignParentLeft">true</item>
		<item name="android:layout_centerVertical">true</item>
		<item name="android:paddingRight">10dip</item>
		<item name="android:paddingLeft">10dip</item>
		<item name="android:layout_marginTop">6dip</item>
		<item name="android:layout_marginBottom">6dip</item>
		<item name="android:layout_marginLeft">10dip</item>
	</style>
	
	
	<style name="app_title_right">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<!-- <item name="android:background">@drawable/box_small</item> -->
		<item name="android:background">@drawable/btn_bacgroud</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:textSize">16dip</item>
		<item name="android:layout_alignParentRight">true</item>
		<item name="android:layout_centerVertical">true</item>
		<item name="android:paddingRight">10dip</item>
		<item name="android:paddingLeft">10dip</item>
		<item name="android:paddingTop">5dip</item>
		<item name="android:paddingBottom">5dip</item>
		<item name="android:layout_marginTop">6dip</item>
		<item name="android:layout_marginBottom">6dip</item>
		<item name="android:layout_marginRight">10dip</item>
	</style>
	
	
	<style name="app_title_wrap">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:gravity">center</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:textSize">18dip</item>
		<item name="android:background">@null</item>
		<!-- <item name="android:background">@drawable/text_background</item> -->
	</style>
	
	
	<style name="app_title_back">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<!-- <item name="android:background">@drawable/back_sanjiao</item> -->
		<item name="android:background">@drawable/icon_nav_back</item>
		<item name="android:layout_alignParentLeft">true</item>
		<item name="android:layout_centerVertical">true</item>
		<item name="android:layout_marginLeft">10dip</item>
		<!-- <item name="android:text">@string/app_back_label</item> -->
		<item name="android:textColor">@color/white</item>
		<item name="android:textSize">16dip</item>
		<item name="android:paddingLeft">10dip</item>
		<!-- <item name="android:paddingTop">5dip</item>
		<item name="android:paddingBottom">5dip</item> -->
	</style>
	
	
	
	 <style name="app_corner_wrap">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/app_border_with_corner</item>
        <item name="android:orientation">vertical</item>
    </style>
	
	 
	  <style name="app_row_item">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="app_row_with_arrow" parent="@style/app_row_item">
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:drawableRight">@drawable/arrow</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:background">@drawable/btn_selector</item>
        <item name="android:textSize">16dip</item>
    </style>
    
	 <style name="app_about_content">
    	<item name="android:layout_width">wrap_content</item>
    	<item name="android:layout_height">wrap_content</item>
    	<item name="android:autoLink">web|email</item>
    	<item name="android:layout_gravity">left</item>
    	<item name="android:textSize">16dip</item>
    	<item name="android:textColor">@color/black</item>
    	<item name="android:layout_marginLeft">20dip</item>
    	<item name="android:layout_marginTop">10dip</item>
    	<item name="android:layout_marginBottom">10dip</item>
    </style>
	
	 
	 <style name="app_btn_submit">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_centerHorizontal">true</item>
		<item name="android:textSize">16dip</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:background">@drawable/btn_submit_background</item>
	</style>
	
	<style name="app_btn_submit_fill">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_centerHorizontal">true</item>
		<item name="android:textSize">18dip</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:background">@drawable/btn_submit_background</item>
	</style>
	
	
</resources>
	