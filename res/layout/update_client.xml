<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	
	<LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		
		<TextView android:id="@+id/textViewDownloadLabel" android:layout_width="wrap_content"
			android:text="下载" android:layout_height="wrap_content"></TextView>
			
		<TextView android:text="0%" android:id="@+id/download_apk_grogress"
			android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
	</LinearLayout>
	
	<ProgressBar style="?android:attr/progressBarStyleHorizontal"
		android:max="100" android:layout_width="fill_parent"
		android:id="@+id/update_client_download_progress_bar"
		android:layout_height="40dip"></ProgressBar>
	
</LinearLayout>
