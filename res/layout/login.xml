<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="@color/bg_gray_light">


	<!-- 标题栏 -->
	<RelativeLayout style="@style/app_title_main">

		<!-- 标题 -->
		<TextView android:id="@+id/more_about_title" android:text="登录监控平台" style="@style/app_title_wrap"
			android:layout_centerInParent="true" />

	</RelativeLayout>

	<include layout="@layout/title_line_bottom" />

	<!-- 主体部分 -->
	<ScrollView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:paddingTop="20dip"
		android:paddingBottom="30dip">
		<LinearLayout style="@style/app_corner_wrap" android:background="@null" android:layout_gravity="center"
			android:layout_marginLeft="10dip" android:layout_marginRight="10dip">
	
		    <EditText android:id="@+id/login_username" android:hint="用户名" style="@style/login_username_style" />
		   
		    <EditText android:id="@+id/login_password" android:hint="密码" style="@style/login_username_style" />
			
			
			<Button
                style="@style/login_btn_submit_fill"
                android:layout_marginBottom="20dip"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_marginTop="4dip"
                android:text="登录"
                android:onClick="handleLogin" />
			

		</LinearLayout>
	</ScrollView>


</LinearLayout>
